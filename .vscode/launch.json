    "version": "0.2.0",
    "configurations": [
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "Build and run",
            "program": "${workspaceFolder}\\out\\app.js",
            "preLaunchTask": "tsc: build - tsconfig.json",
            "outFiles": ["${workspaceFolder}/out/**/*.js"],
            "skipFiles": [
                "<node_internals>/**"
            ]
        },
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "Run",
            "program": "${workspaceFolder}\\out\\app.js",
            "outFiles": ["${workspaceFolder}/out/**/*.js"],
            "skipFiles": [
                "<node_internals>/**"
            ]
        }
    ]
}